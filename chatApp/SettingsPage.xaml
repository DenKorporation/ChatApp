<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="chatApp.SettingsPage"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="*, *, *">
        <HorizontalStackLayout Grid.Row="0" Spacing="20">
            <Label>Name</Label>
            <Entry x:Name="nameEntry" Placeholder="Enter your name"></Entry>
        </HorizontalStackLayout>
        
        <HorizontalStackLayout Grid.Row="1" Spacing="20">
            <Label>EndPoint</Label>
            <Entry x:Name="endPointEntry" Placeholder="Enter server endPoint"></Entry>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>