<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:chatApp"
             x:Class="chatApp.MainPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*, Auto">
        <CollectionView x:Name="ChatView" BackgroundColor="Black" Grid.Row="0" Margin="25,25,25,25"
                        ItemTemplate="{DataTemplate local:MessageTemplate}" />
        <Entry x:Name="EntryField" Grid.Row="1" Placeholder="Enter a message" Margin="30,0,30,30"
               Completed="EntryField_OnCompleted">
        </Entry>
    </Grid>
</ContentPage>